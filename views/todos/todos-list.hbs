<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th scope="col">TASK</th>
        <th scope="col">COMPLETED</th>
      </tr>
    </thead>
    <tbody>
      {{#each todos as |todo|}}
        <tr>
          <td>{{@index}} - {{todo.title}}</td>
          <td>

            {{#if todo.completed}}
              ✅
            {{else}}
              ❌
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>